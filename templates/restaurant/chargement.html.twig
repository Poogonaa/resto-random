{% extends 'base.html.twig' %}

{% block title %} Laissez faire le hasard ! | {{ parent() }} {% endblock %}

{% block body %}
    <div class="d-flex justify-content-center justify-content-sm-center align-items-sm-center justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center align-items-xxl-center" style="width: 90%;padding: 70px 0px;margin: auto;">
        <div class="container py-4 py-xl-5">
            <div class="row mb-5" style="width: 100%;">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <h2 style="color: #002d47;">Choix du restaurant</h2>
                    <p class="w-lg-50" style="color: #002d47;">Laissez faire le hasard !</p>
                </div>
            </div>
            <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3 d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex d-xxl-flex justify-content-center align-items-center justify-content-sm-center justify-content-md-center justify-content-lg-center justify-content-xl-center justify-content-xxl-center" style="width: 100%;margin-top: 0;margin-bottom: 48px;height: 100px;">
                <div class="col" style="width: 70%;height: 100%;margin: auto;">
                    <div class="progress" style="width: 100%;height: 50%;--bs-primary-rgb: 0,45,71;--bs-primary: #002d47;">
                        <div class="js-progress-bar progress-bar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%; background: rgb(0,7,140);background: linear-gradient(90deg, rgba(0,7,140,1) 0%, rgba(0,45,71,1) 100%);">0%</div>
                    </div>
                </div>
            </div>
            <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3 d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex d-xxl-flex justify-content-center align-items-center justify-content-sm-center justify-content-md-center justify-content-lg-center justify-content-xl-center justify-content-xxl-center" style="width: 100%;">
                <div class="col">
                    <div data-aos="fade" data-aos-duration="500" class="mb-3"><button class="js-btn btn btn-primary d-block w-100" data-bss-hover-animate="pulse" type="submit" style="border-style: none;border-radius: 4px; background: #002d47">C'est parti !</button></div>
                </div>
            </div>
            <input id="js-id" type="hidden" value="{{ id }}">
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('progress_bar') }}
{% endblock %}