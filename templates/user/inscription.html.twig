{% extends 'base.html.twig' %}

{% block title %} Inscription | {{ parent() }} {% endblock %}

{% block body %}
    <div class="d-flex" style="padding: 140px 0px;width: 100%;">
        <section class="position-relative py-4 py-xl-5" style="width: 100%;">
            <div class="container">
                {% for flash in app.flashes('error') %}
                    <div class="alert alert-danger">{{ flash | trans({flash}, 'verifyEmail') }}</div>
                {% endfor %}
                <div class="row mb-5">
                    <div class="col-md-8 col-xl-6 text-center mx-auto">
                        <h2 style="color: #002d47;">Inscription</h2>
                        <p class="w-lg-50" style="color: #002d47;">Page d'inscription.</p>
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 col-xl-4">
                        <div class="card mb-5" style="background: rgba(255,255,255,0);">
                            <div class="card-body d-flex flex-column align-items-center">
                                {{ form_start(form, {'attr':{'class':'text-center'}}, ) }}
                                    <div class="mb-3">
                                        {{ form_errors(form.pseudo) }}
                                        {{ form_widget(form.pseudo, {'attr':{'data-aos-duration':'500', 'class':'form-control', 'data-aos':'fade', 'name':'pseudo', 'placeholder':'Pseudo', 'style':'color: #002d47;'}}) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_errors(form.mail) }}
                                        {{ form_widget(form.mail, {'attr':{'data-aos-duration':'500', 'class':'form-control', 'data-aos':'fade', 'name':'mail', 'placeholder':'Email', 'style':'color: #002d47;'}}) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_errors(form.password.first) }}
                                        {{ form_widget(form.password.first, {'attr':{'data-aos-duration':'500', 'class':'form-control', 'data-aos':'fade', 'name':'password', 'placeholder':'Mot de passe', 'style':'color: #002d47;'}}) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_widget(form.password.second, {'attr':{'data-aos-duration':'500', 'class':'form-control', 'data-aos':'fade', 'name':'password2', 'placeholder':'Confirmer le mot de passe', 'style':'color: #002d47;'}}) }}
                                    </div>
                                    <div class="mb-3" data-aos="fade" data-aos-duration="500">
                                        <button class="btn btn-primary d-block w-100" data-bss-hover-animate="pulse" type="submit" style="border-style: none;border-radius: 4px;background: #002d47;">Inscription</button>
                                    </div>
                                    <a class="text-center" data-aos="fade" data-aos-duration="500" href="{{ path('app_connexion') }}" style="margin: 0px 0px 16px;color: #002d47;"><br>Déjà un compte ?<br></a>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}