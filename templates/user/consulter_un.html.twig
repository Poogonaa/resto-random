{% extends 'base.html.twig' %}

{% block title %} Consulter les comptes | {{ parent() }} {% endblock %}

{% block body %}
    <div class="d-flex justify-content-center justify-content-sm-center align-items-sm-center justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center align-items-xxl-center" style="width: 90%;padding: 70px 0px;">
        <div class="container justify-content-between py-4 py-xl-5">
            <div class="row mb-5">
                <div class="col-md-8 col-xl-6 text-center mx-auto" style="color: #002d47;">
                    <h2>Votre compte</h2>
                    <p class="w-lg-50">Voici les informations de votre compte.</p>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-xl-center align-items-xl-center" style="width: 100%;color: #002d47;">
                <div style="width: 45%;padding: 0px 5px;">
                    <div class="table-responsive text-center d-flex justify-content-around" style="width: 100%;border-radius: 8px;border: 1px solid rgba(0,0,0,0.18);border-bottom-color: rgba(0, 0, 0, 0.18);">
                        <table class="table table-hover table-borderless">
                            <tbody>
                            <tr>
                                <th>Pseudo</th>
                                <td>{{ user.pseudo }}</td>
                            </tr>
                            <tr>
                                <th>Mail</th>
                                <td>{{ user.mail }}</td>
                            </tr>
                            <tr></tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex mt-3 w-100">
                        <button class="btn btn-primary d-block" data-bss-hover-animate="pulse" type="submit" style="border-style: none;border-radius: 4px;background: #002d47;" onclick="window.location.href ='{{ path('app_forgot_password_request') }}'">Changer de mot de passe</button>
                    </div>

                </div>
                <div class="d-flex justify-content-center align-items-center flex-column" style="width: 45%;padding: 0px 5px;">
                    <h1>Votre score :</h1>
                    <div class="container2">
                        <svg class="loader" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400">
                            <circle cx="50%" cy="50%" r="190" stroke="#002d47"/>
                            <circle cx="50%" cy="50%" r="165" stroke="#0091e6"/>
                            <circle cx="50%" cy="50%" r="140" stroke="#002d47"/>
                            <circle cx="50%" cy="50%" r="115" stroke="#0091e6"/>
                            <text class="numb" font-size="40" x="50%" y="50%" alignment-baseline="middle" text-anchor="middle" fill="#0091e6" >0</text >
                        </svg>
                    </div>
                </div>
                <input id="js-points" type="hidden" value="{{ user.point }}">
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('round-progress-bar') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('round-progress-bar') }}
{% endblock %}